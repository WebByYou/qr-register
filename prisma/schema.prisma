generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Registration {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  employeeId String   @unique
  createdAt  DateTime @default(now())
}

model SystemSetting {
  key   String @id
  value String
}

model Winner {
  id         Int      @id @default(autoincrement())
  employeeId String
  firstName  String
  lastName   String
  department String?
  prize      String?
  wonAt      DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
